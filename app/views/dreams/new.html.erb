<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for(@dream) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :picture %>
        <%= f.input :category, as: :file %>
        <%= f.input :price %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
