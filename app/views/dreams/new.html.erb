<div class="container">
  <h1 class="text-white text-center mb-3">Ajoute un rêve !</h1>
  <div class="row">
    <div class="col text-white">
      <%= simple_form_for(@dream) do |f| %>
        <%= f.input :title, label: 'Titre', class:"input" %>
        <%= f.input :description, label: 'Description' %>
        <%= f.input :picture, as: :file, label: 'Photo' %>
        <%= f.input :category, collection: Dream::DREAM_CATEGORIES, label: 'Catégorie' %>
        <%= f.input :price, label: 'Prix' %>
        <div class="d-flex justify-content-center p-3">
          <%= f.submit 'Fais nous rêver', class: "btn btn-map" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
